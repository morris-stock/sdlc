\def\srs@value@subtitle{软件需求规格说明}
\newcommand*\srstitle[1]{
  \def\srs@value@title{#1}
  \title{\srs@value@subtitle{} -- \srs@value@title}
}
\newcommand*\srsversion[1]{
  \def\srs@value@version{#1}}
\newcommand*\srsproducer[2]{
  \def\srs@value@producer{#1}
  \def\srs@value@produce@date{#2}}
\newcommand*\srsreviewer[2]{
  \def\srs@value@reviewer{#1}
  \def\srs@value@review@date{#2}}
\newcommand*\srsapprover[2]{
  \def\srs@value@approver{#1}
  \def\srs@value@approve@date{#2}}

\newcommand*\aventry[2]{\makebox[5em][s]{#1} ~:~ \makebox[0.5\textwidth][l]{#2}}
\newcommand*\avventry[3]{\aventry{#1}{\makebox[0.15\textwidth][s]{#2} \zhslash \makebox[0.35\textwidth][l]{#3}}}

\newcommand*\makesrstitle{
  \clearpage
  \thispagestyle{empty}

  \begin{center}
    \null\vfil
    \vskip \stretch{2}
    \song \xiaoer {\srs@value@title}

    \hei \xiaoyi \textbf {\srs@value@subtitle}
    \vskip \stretch{2}

    \wbei \xiaosan {
      \aventry{\srs@label@version}{\srs@value@version}
      \vskip \stretch{1}
      \avventry{\srs@label@producer@and@date}{\srs@value@producer}{\srs@value@produce@date}
      \vskip \stretch{1}
      \avventry{\srs@label@reviewer@and@date}{\srs@value@reviewer}{\srs@value@review@date}
      \vskip \stretch{1}
      \makebox[5em][s]{\kern .3em{}\srs@label@approver@and@date}\kern .27em{} ~:~ \makebox[0.5\textwidth][l]{\makebox[0.15\textwidth][s]{\srs@value@approver} \zhslash \makebox[0.35\textwidth][l]{\srs@value@approve@date}}
      %\avventry{\srs@label@approver@and@date}{\srs@value@approver}{\srs@value@approve@date}
    }
    \vskip \stretch{2}
  \end{center}
}
